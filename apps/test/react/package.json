{
  "name": "@storefront-ui/react-test",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:not-run": "vite",
    "build-only": "vite build",
    "lints": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "clean": "rimraf ./src/components/sfui",
    "clean-coverage": "rimraf ./coverage && rimraf ./.nyc_output && rimraf ../../../packages/sfui/frameworks/react/coverage && rimraf ../../../packages/sfui/frameworks/react/.nyc_output",
    "display-coverage": "yarn nyc report --cwd ../../../packages/sfui/frameworks/react --reporter=text --reporter=lcov",
    "prepare-coverage-report": "frs-replace \"/apps/test/react/src/components/sfui/react/\" \"/packages/sfui/frameworks/react/\" -i ./.nyc_output/out.json -o ../../../packages/sfui/frameworks/react/.nyc_output/out.json",
    "sync-test": "cpy . ../../apps/test/react/src/components/sfui/tests --cwd=../../../packages/tests/",
    "sync-components": "cpy . !dist ../../../../apps/test/react/src/components/sfui/react/ --cwd=../../../packages/sfui/frameworks/react/",
    "sync:watch-test": "chokidar --silent \"../../../packages/tests/**/*.{cy.tsx,ts,tsx,png,jpg,jpeg,json}\" -c \"yarn sync-test\"",
    "test": "yarn clean && yarn sync-test && concurrently \"yarn sync:watch-test\" \"yarn cypress open --component\"",
    "test:ci": "yarn clean && yarn clean-coverage && yarn sync-test && yarn sync-components && CYPRESS_COVERAGE=true yarn cypress run --component && yarn prepare-coverage-report && yarn display-coverage",
    "test:ci:react": "yarn test:ci"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.4",
    "@frsource/frs-replace": "^4.1.0",
    "@percy/cli": "^1.19.2",
    "@percy/cypress": "^3.1.2",
    "@storefront-ui/eslint-config": "workspace:*",
    "@storefront-ui/react": "workspace:*",
    "@storefront-ui/shared": "workspace:*",
    "@storefront-ui/tailwind-config": "workspace:*",
    "@storefront-ui/tests-shared": "workspace:*",
    "@storefront-ui/tw-plugin-peer-next": "workspace:*",
    "@storefront-ui/typography": "workspace:*",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0-beta.0",
    "autoprefixer": "^10.4.13",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.0.1",
    "cpy-cli": "^4.2.0",
    "cypress": "11.2.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "nyc": "^15.1.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.0",
    "vite-plugin-istanbul": "^4.0.1"
  }
}
