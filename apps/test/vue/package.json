{
  "name": "@storefront-ui/vue-test",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev:not-run": "vite",
    "preview": "vite preview",
    "build-only": "vite build",
    "clean": "rimraf ./src/components/sfui",
    "clean-coverage": "rimraf ./coverage && rimraf ./.nyc_output && rimraf ../../../packages/sfui/frameworks/vue/coverage && rimraf ../../../packages/sfui/frameworks/vue/.nyc_output",
    "display-coverage": "yarn nyc report --cwd ../../../packages/sfui/frameworks/vue --reporter=text --reporter=lcov",
    "prepare-coverage-report": "frs-replace \"/apps/test/vue/src/components/sfui/vue/\" \"/packages/sfui/frameworks/vue/\" -i ./.nyc_output/out.json -o ../../../packages/sfui/frameworks/vue/.nyc_output/out.json",
    "sync-test": "cpy . ../../apps/test/vue/src/components/sfui/tests --cwd=../../../packages/tests/",
    "sync-components": "cpy . !dist ../../../../apps/test/vue/src/components/sfui/vue/ --cwd=../../../packages/sfui/frameworks/vue/",
    "sync:watch-test": "chokidar --silent \"../../../packages/tests/**/*.{cy.tsx,ts,tsx,png,jpg,jpeg,json}\" -c \"yarn sync-test\"",
    "generate-coverage": "yarn prepare-coverage-report && yarn display-coverage",
    "test": "yarn clean && yarn sync-test && concurrently \"yarn sync:watch-test\" \"yarn cypress open --component\"",
    "test:ci": "yarn clean && yarn clean-coverage && yarn sync-test && yarn sync-components",
    "test:ci-pre:vue": "yarn test:ci",
    "test:ci:vue": "yarn test:ci && CYPRESS_COVERAGE=true yarn cypress run --component && yarn generate-coverage"
  },
  "dependencies": {
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@frsource/cypress-plugin-visual-regression-diff": "^3.3.10",
    "@frsource/frs-replace": "^4.1.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@storefront-ui/eslint-config": "workspace:*",
    "@storefront-ui/shared": "workspace:*",
    "@storefront-ui/tailwind-config": "workspace:*",
    "@storefront-ui/tests-shared": "workspace:*",
    "@storefront-ui/tw-plugin-peer-next": "workspace:*",
    "@storefront-ui/typography": "workspace:*",
    "@storefront-ui/vue": "workspace:*",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "^18.13.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.13",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "cpy-cli": "^4.2.0",
    "cypress": "^12.9.0",
    "nyc": "^15.1.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "rimraf": "^4.1.2",
    "sass": "^1.58.2",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "vite": "^4.3.0",
    "vite-plugin-istanbul": "^4.0.0",
    "vue-tsc": "^1.1.2"
  }
}
