{
  "name": "@storefront-ui/vue-preview",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev:not-run": "vite",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.cypress-ct.json --composite false",
    "lints": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "clean": "rimraf ./src/components/sfui",
    "clean-coverage": "rimraf ./coverage && rimraf ./.nyc_output && rimraf ../../../packages/sfui/frameworks/vue/coverage && rimraf ../../../packages/sfui/frameworks/vue/.nyc_output",
    "display-coverage": "yarn nyc report --cwd ../../../packages/sfui/frameworks/vue --reporter=text --reporter=lcov",
    "prepare-coverage-report": "frs-replace \"/apps/preview/vue/src/components/sfui/vue/\" \"/packages/sfui/frameworks/vue/\" -i ./.nyc_output/out.json -o ../../../packages/sfui/frameworks/vue/.nyc_output/out.json",
    "sync-test": "cpy . ../../apps/preview/vue/src/components/sfui/tests --cwd=../../../packages/tests/",
    "sync-components": "cpy . !dist ../../../../apps/preview/vue/src/components/sfui/vue/ --cwd=../../../packages/sfui/frameworks/vue/",
    "sync:watch-test": "chokidar --silent \"../../../packages/tests/**/*.{cy.tsx,ts,tsx,png,jpg,jpeg,json}\" -c \"yarn sync-test\"",
    "test": "yarn clean && yarn sync-test && concurrently \"yarn sync:watch-test\" \"yarn cypress open --component\"",
    "test:ci": "yarn clean && yarn clean-coverage && yarn sync-test && yarn sync-components && CYPRESS_COVERAGE=true yarn cypress run --component && yarn prepare-coverage-report && yarn display-coverage",
    "test:ci:vue": "yarn test:ci"
  },
  "dependencies": {
    "pinia": "^2.0.30",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@frsource/frs-replace": "^4.1.0",
    "@percy/cli": "^1.19.2",
    "@percy/cypress": "^3.1.2",
    "@rushstack/eslint-patch": "^1.2.0",
    "@storefront-ui/eslint-config": "workspace:*",
    "@storefront-ui/sass": "workspace:*",
    "@storefront-ui/shared": "workspace:*",
    "@storefront-ui/tailwind-config": "workspace:*",
    "@storefront-ui/tests-shared": "workspace:*",
    "@storefront-ui/vue": "workspace:*",
    "@types/node": "^18.13.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.13",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "cpy-cli": "^4.2.0",
    "cypress": "^11.0.1",
    "eslint": "^8.34.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.9.0",
    "nyc": "^15.1.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "sass": "^1.58.2",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "vite": "^4.0.0",
    "vite-plugin-istanbul": "^4.0.0",
    "vue-tsc": "^1.1.2"
  }
}
